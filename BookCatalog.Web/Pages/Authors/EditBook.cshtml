@page "{bookId}"
@model BookCatalog.Web.Pages.Authors.EditBookModel
@{
    ViewData["Title"] = "EditBook";
}

<h2>@Model.Book.Title</h2>
<form method="post">

    <div class="form-group">
        <input type="hidden" asp-for="Book.Id" />
        <input type="hidden" asp-for="Book.AuthorId"/>
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Copyright"></label>
        <input asp-for="Book.Copyright" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Publisher"></label>
        <input asp-for="Book.Publisher" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Book.ImageUrl"></label>
        <input asp-for="Book.ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">
        Save
    </button>
</form>